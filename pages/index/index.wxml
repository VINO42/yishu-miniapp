<view wx:if="{{isHide}}">
  <view wx:if="{{canIUse}}">
    <view class='header'>
      <image src='/images/icon.jpg'></image>
    </view>

    <view class='content' style="position: center;">
      <view>同城易书小程序申请获取以下权限</view>
      <text>获得你的公开信息(昵称，头像等)</text>
      <text>获取当前的模糊地理位置</text>
    </view>

    <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
      授权登录
    </button>
  </view>
  <view wx:else>请升级微信版本</view>
</view>
<!-- 首页页面 -->
<view wx:else>

  <view>
    <view class="topView">
      <!-- <van-cell-group>
      <van-cell class="cities" is-link value="全国 "arrow-direction="down" bind:click='bindCities'/>
    </van-cell-group> -->
          <input class="cities" type="text" bindtap="bindCities" id='{{regionId}}' value="{{regionName}}" />

      <van-search field-class="searchosition" value="{{ inputval }}" placeholder="请输入书籍或isbn" background='red' bind:blur="inputEvent" bind:search="onSearch" input-align="left" use-action-slot show-action bind:blur="inputEvent" bind:search="onSearch" shape="round">
        <view slot="action" bind:tap="searchClick">搜索</view>
      </van-search>


    </view>
    <view class="page-section-spacing">
      <scroll-view class="scrollview">
        <block wx:for="{{listArr}}" wx:key="index" wx:for-item="caption">
          <view wx:for="{{caption}}" wx:key="index">

            <van-cell-group inset class="cardview">
              <!-- <navigator hover-class="light_blue" class="text"> -->
              <van-cell class="cardview" hover-class="light_blue" title-class="cell-title" title="{{item.title}}" center url="../details/detail?content={{item.content}}&title={{item.title}}" />
              <!-- </navigator> -->
            </van-cell-group>
          </view>
        </block>
      </scroll-view>
    </view>
  </view>

</view>